# Example environment for rocrate-mcp (updated)
# Prefix: ROC_MCP_ (previously RMP_)

# General
ROC_MCP_INDEX_MODE=eager
ROC_MCP_INDEXED_DB_PATH=./rocrate_index.sqlite
ROC_MCP_ROC_FIELDS_TO_INDEX=name,description
ROC_MCP_BACKEND=filesystem  # one of: filesystem | azure | none
ROC_MCP_BACKEND_ID=mybackend  # used to build stable crate IDs
ROC_MCP_STORAGE_INDEX_MIN_UPDATE_INTERVAL_SECONDS=3600  # minimum interval between index updates in seconds

# Filesystem backend (used when ROC_MCP_BACKEND=filesystem)
ROC_MCP_FILESYSTEM_ROOT=./example_ro_crates
ROC_MCP_FILESYSTEM_ROOT_PREFIX=
ROC_MCP_FILESYSTEM_DEFAULT_SUFFIXES=.zip

# Azure backend (used when ROC_MCP_BACKEND=azure)
ROC_MCP_AZURE_CONNECTION_STRING=
ROC_MCP_AZURE_CONTAINER=

# Embeddings / semantic search placeholders
ROC_MCP_EMBEDDINGS_PROVIDER=local # one of local|openai|none
ROC_MCP_EMBEDDINGS_API_KEY=
ROC_MCP_EMBEDDINGS_MODEL_NAME=Qwen/Qwen3-Embedding-0.6B # model name for openai, e.g., text-embedding-3-small, beware of resource usage for local models
ROC_MCP_EMBEDDINGS_CHUNK_TOKEN_SIZE=256 # automatic chunking of text into pieces of approx. Values larger than token limit of model will be capped.
ROC_MCP_EMBEDDINGS_CHUNK_OVERLAP=20 # number of overlapping tokens between chunks when splitting text for embeddings