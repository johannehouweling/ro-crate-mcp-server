# Example environment for rocrate-mcp (updated)
# Prefix: ROC_MCP_ (previously RMP_)

# General
ROC_MCP_INDEX_MODE=eager
ROC_MCP_INDEXED_DB_PATH=./rocrate_index.sqlite
ROC_MCP_ROC_FIELDS_TO_INDEX=name,description
ROC_MCP_BACKEND=filesystem  # one of: filesystem | azure | none

# Filesystem backend (used when ROC_MCP_BACKEND=filesystem)
ROC_MCP_FILESYSTEM_ROOT=./example_ro_crates
ROC_MCP_FILESYSTEM_ROOT_PREFIX=
ROC_MCP_FILESYSTEM_DEFAULT_SUFFIXES=.zip

# Azure backend (used when ROC_MCP_BACKEND=azure)
ROC_MCP_AZURE_CONNECTION_STRING=
ROC_MCP_AZURE_CONTAINER=

# Embeddings / semantic search placeholders
ROC_MCP_EMBEDDINGS_PROVIDER=local|openai|none
ROC_MCP_EMBEDDINGS_API_KEY=
